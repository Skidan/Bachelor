@model IEnumerable<Qualify.Models.Claim>
@{
    Layout = "_Layout";
}

<div class="minor-navigation">
    <a class="button btn-success" asp-controller="claim" asp-action="addclaim">Add a claim</a>
</div>

<div class="flex-scroll-container">
    @foreach (var claim in Model)
    {
        <a class="content-item" asp-controller="Claim" asp-action="ViewClaim" asp-route-id="@claim.ID">
            <h3>@claim.Title</h3>
            <p><strong>@claim.ClientID</strong>, <em>@claim.DateStart.ToString("yyyy-MM-dd")</em></p><br />
            <p>@claim.Description</p>
        </a>
    }
</div>